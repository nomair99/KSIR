<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Homepage</title>
    <link rel="stylesheet" href="./styles/index.css" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css">
    <link rel="icon" href="./styles/ksir_icon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="./styles/ksir_icon.ico" type="image/x-icon">
    <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
  </head>
  <body>
  <div class="header">
    <img src="./styles/ksir.png" alt="ksir" width=220px height=100%>
    <input type="checkbox" id="chk">
    <label for="chk" class="show-menu-btn">
      <i class="fas fa-ellipsis-h"></i>
    </label>

    <ul class="menu">
      <a href="/">Home</a>
      <a href="#">About</a>
      <a href="/privacy">Privacy</a>
      <a href="#">Contact</a>
      <label for="chk" class="hide-menu-btn">
        <i class="fas fa-times"></i>
      </label>
    </ul>
  </div>

<div class="content">
    <center>
      <a id="play" onclick="getUsername()">Play</a>
    </center>
    </div>

    <script>
      function getUsername() {
        var user = prompt('Enter a username');
        var data = { username: 'true' };
        fetch('http://localhost:3000/login', {
          method: 'post',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });
      }
    </script>
  </body>
</html>
